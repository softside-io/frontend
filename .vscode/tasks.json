{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Initial Task",
			"type": "shell",
			"command": "node",
			"args": ["./.scripts/init-task.mjs"],
			"presentation": {
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			},
			"hide": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": ".*",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": ".*"
				}
			},
			"isBackground": false,
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Start Library",
			"type": "shell",
			"command": "npm",
			"args": ["run", "start:lib"],
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": {
					"regexp": "^\\s+(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Building tailwind for library*$",
					"endsPattern": "^.*Compilation complete. Watching for file changes...*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": ["Initial Task"]
		},
		{
			"label": "Start Web Application",
			"type": "shell",
			"command": "npm",
			"args": ["run", "start:web"],
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"pattern": {
					"regexp": "^\\s+(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Building.*$",
					"endsPattern": "^.*Browser window opened to.*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"dependsOn": ["Start Library"]
		},
		{
			"label": "Build Library",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build:lib"],
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "default"
			}
		},
		{
			"label": "Build Web",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build:web"],
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "default"
			},
			"dependsOn": ["Build Library"]
		},
		{
			"label": "Deploy Locally",
			"type": "shell",
			"command": "npm",
			"args": ["run", "deploy:local"],
			"group": "none",
			"isBackground": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^\\s+(.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Serving:*$",
					"endsPattern": "^.*https://localhost:4321*$"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"runOptions": {
				"runOn": "default"
			},
			"dependsOn": ["Build Web"]
		}
	]
}
